/* pages/my/my.wxss */
page {
  height: 100%;
}
.container {
  height: 100%;
  margin: 0%;
  padding: 0%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
/* 用户头像 */
.avatar {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(0, 0, 0);
}
.userInfoAvatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  font-size: 30rpx;
}
/* 功能列表 */
.funcList {
  width: 100%;
  padding: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: rgb(0, 0, 0);
  font-size: 25rpx;
  border-bottom: 1rpx solid rgba(228, 209, 209, 0.8);
}
.funcList view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.funcList image {
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 5%;
}
/* 关于我们 */
.about-us {
  width: 80%;
  padding: 20rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  
}
.about-us view {
  width: 100%;
  height: 125rpx;
  display: flex;
  align-items: center;
}
.about-us image {
  overflow: hidden;
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
  border-radius: 5%;
}