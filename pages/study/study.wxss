/* pages/study/study.wxss */
page {
  height: 100%;
}
.studay-view {
  width: 100%;
  height: 100%;
}
.top-view {
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.top-view view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 单词展示区 */
.word-view {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  margin-top: 15%; 
}
.currentWord {
  font-size: 80rpx;
  font-weight: 800;
}
.word-view .soundmark-view{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.soundmark {
  color: gray;
}
.soundmark-view .volume {
  margin-right: 8rpx;
  width: 64rpx;
  height: 64rpx;
}
/* 例句view */
.example-view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 90%;
  margin-top: 80rpx;
}
.example-text {
  color: gray;
  font-size: 28rpx;
}
.exampleSentence::first-letter {
  text-transform: uppercase;
}

/* 按钮 */
.button-view {
  position: fixed;
  width: 100%;
  bottom: 2%;
}

.button-view button {
  margin: 20rpx auto;
  width: 90%;
  height: 90rpx;
  border-radius: 50rpx;
  text-align: center;
  background-color: #00b696;
}
.button-view button::after {
  border: 0;
}
.button-view .forget {
  background-color: #ff8759;  
}
.hover-forget:hover {
  top: 1rpx;
  position: relative;
  background-color: #018a71;  
}

.hover-class:hover {
  top: 1rpx;
  position: relative;
  background-color: #c76a46;  
}